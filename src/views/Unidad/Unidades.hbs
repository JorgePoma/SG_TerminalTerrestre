<div class="u-align-center u-clearfix u-palette-5-light-2 u-section-3 u-left-cell" id="carousel_6abd">
  <h3 class="u-text u-text-4" style="margin-bottom: 20px;"> Tabla de Unidades </h3>
  <nav class="navbar navbar-light bg-light">
    <form class="container-fluid">
      <div class="input-group">
        <span class="input-group-text" id="basic-addon1">Buscar</span>
        <input type="text" class="form-control" placeholder="Origen-Destino" aria-label="Origen-Destino"
          aria-describedby="basic-addon1">
      </div>
    </form>
  </nav>
  <container>

    <table class="table text-center">
      <thead>
        <tr>
          <th scope="col" style="text-align: center;">Placa</th>
          <th scope="col" style="text-align: center;">Marca</th>
          <th scope="col" style="text-align: center;">Modelo</th>
