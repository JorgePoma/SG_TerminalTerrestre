      </thead>
      <tbody>
        {{#each unidades}}
        <tr>
          <td>{{placa}}</td>
          <td>{{marca}}</td>
          <td>{{modelo}}</td>
          <td>{{capacidad}}</td>
          <td>
            {{#if estado}}
            <a href="/enabledUnidades/{{_id}}" class="btn btn-success" onclick="return habilitar()">
             Habilitar
            </a>
            {{else}}
            <a href="/enabledUnidades/{{_id}}" class="btn btn-secondary" onclick="return inhabilitar()">
               Inhabilitar
            </a>
            {{/if}}
          </td>
          <td><a href="/editarUnidades/{{_id}}" class="btn btn-info">Editar</a></td>
