  function inhabilitar() {
    var respuesta = confirm("¿Estas seguro que deseas HABILITAR la cooperativa?");
    if (respuesta == true) {
      return true;
    }
    else {
      return false;
    }
  }
  function habilitar() {
    var respuesta = confirm("¿Estas seguro que deseas INHABILITAR la cooperativa?");
    if (respuesta == true) {
      return true;
    }
    else {
      return false;
    }
  }
</script>
