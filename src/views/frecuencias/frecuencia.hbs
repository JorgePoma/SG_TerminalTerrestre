</section>

<container>
<h3 class="u-text u-text-1 text-center" style="margin-top: 50px;">TABLA DE FRECUENCIA</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Origen</th>
                <th scope="col">Destino</th>
                <th scope="col">Precio</th>
                <th scope="col">Duracion</th>
                <th scope="col">Rutas</th>
                <th scope="col">Modificar</th>
            </tr>
        </thead>
        <tbody>
            {{#each Frecuencias}}
            <tr>
                <td>{{origen}}</td>
                <td>{{destino}}</td>
                <td>{{valor_frec}}</td>
                <td>{{duracion}}</td>
                <td>
                    {{#if estado}}
                    <a href="/enableFrecuencia/{{_id}}" class="btn btn-success" onclick="return habilitar()">
                        Inhabilitar
                    </a>
                    {{else}}
                    <a href="/enableFrecuencia/{{_id}}" class="btn btn-secondary" onclick="return inhabilitar()">
                        Habilitar
                    </a>
                    {{/if}}
                    
                </td>
                <td><a href="/cooperativaEdit/{{_id}}" class="btn btn-info">Editar</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</container>